@using CF_ASP_NET.Models;
@{
    ViewBag.Title = "Home Page";
}
<div class="table">
    <div class="table-header">
        <div class="table-header-item">標題</div>
        <div class="table-header-item-sm">結束時間</div>
        <div class="table-header-item-md">建立時間</div>
        <div class="table-header-right"></div>
    </div>
    @foreach (CfProposalV a in ViewData["DataList"] as List<CfProposalV>)
    {
        <div class="table-list">
            <div class="table-list-item">@a.title</div>
            <div class="table-list-item-sm">@a.endTime</div>
            <div class="table-list-item-md">@a.makeTime</div>
            <div class="table-list-right">
                <img src="image/edit.png" onclick="setDialogPage('verify', @a.proposal)" width="24" height="24" class="d-inline-block align-top" alt="">
            </div>
        </div>
    }
    @{
        int length = (int)ViewData["DataListLength"];
    }
    @for (int i = length; i < 10; i++)
    {
        <div class="table-list">
            <div class="table-list-item"></div>
            <div class="table-list-item-sm"></div>
            <div class="table-list-item-md"></div>
            <div class="table-list-right">
            </div>
        </div>
    }
</div>
<div class="bottom-menu">
    <div class="previouspage @ViewData["disable_str1"]">
        <img src="image/Previous page.png" onclick="setMainPage('verify', @ViewData["prev_page"], '@ViewData["OrderBy"]', '@ViewData["DescAsc"]', '@ViewData["Keyword"]')" height="36">
    </div>
    <div class="nextpage @ViewData["disable_str2"]">
        <img src="image/next page.png" onclick="setMainPage('verify', @ViewData["next_page"], '@ViewData["OrderBy"]', '@ViewData["DescAsc"]', '@ViewData["Keyword"]')" height="36">
    </div>
    <center>
        <div class="numpage">
            <div class="numpage-num">@((int)ViewData["Page"]+1)</div>
        </div>
    </center>
</div>
